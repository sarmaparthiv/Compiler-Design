/* cnt no of cmnt line in c.also eliminate thema and cpy that prgrm into seperate file */
%{
#include<stdio.h>
int a=0,b=0;
%}

%%
"//".* {a++;fprintf(yyout," ");}
"/*"[.|n]*"*/" {b++,fprintf(yyout," ");}
[.|\n]* {fprintf(yyout,yytext);}
%%

int yywrap(){}

int main()
{
yyin=fopen("a3.c","r");
yyout=fopen("a4.txt","w");
yylex();
printf("Single line comments: %d\n",a);
printf("multi line comments:%d\n",b);
printf("total comments:%d",a+b);
return 0;
}






